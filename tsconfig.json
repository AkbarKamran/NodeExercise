{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["node_modules"]
}
